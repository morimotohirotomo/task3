<div class="body">
	<div class="container">
		<div class="row">
			<%= render 'users/list', user: @user, book: @Book %>
			<div class="col-xs-9">
				<% if flash[:notice] %>
				  <p id="notice"><%= flash[:notice] %></p>
				<% end %>

				<h2>Book detail</h2>

				<table class="table">
					<tbody>
						<tr>
							<td>
							<%= link_to @book.user do %>
								<%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40",  class: "" %><br>
								<%= @book.user.name %>
							<% end %>
							</td>
							<td>
							 	<%= link_to book_path(@book.id) do %>
									<%= @book.title %>
							 	<% end %>
							</td>
							<td><%= @book.body %></td>
							<% if @book.user == current_user %>
							<td>
								<%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %>
							</td>
							<td>
								<%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn-sm btn-danger" %>
							</td>
							<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>